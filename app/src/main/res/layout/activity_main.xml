<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/abu"
    tools:context=".MainActivity">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


</RelativeLayout>
    <LinearLayout

        android:id="@+id/nav"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rounded_square"
        android:backgroundTint="@color/merah"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/lblStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak Terkoneksi"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_square"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout

            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp">

            <RelativeLayout
                android:id="@+id/hover_free"
                android:backgroundTint="@color/abu"
                android:background="@drawable/rounded_square"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">

    <Button
        android:id="@+id/btnFree"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/free"
        android:layout_marginBottom="8dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freemode"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp">

            <RelativeLayout
                android:id="@+id/hover_avoider"
                android:backgroundTint="@color/white"
                android:background="@drawable/rounded_square"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">

    <Button
        android:id="@+id/btnAvoider"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/avoider"

        android:layout_marginBottom="8dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avoider"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp">

            <RelativeLayout
                android:id="@+id/hover_line"
                android:backgroundTint="@color/white"
                android:background="@drawable/rounded_square"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">

    <Button
        android:id="@+id/btnLine"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/line"
        android:layout_marginBottom="8dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linemode"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_square_top">

        <LinearLayout
            android:background="@drawable/rounded_square"
            android:backgroundTint="@color/abu"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Kecepatan :"/>
            <TextView
                android:id="@+id/view_speed"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"

            android:thumbTint="@color/design_default_color_primary"
            android:progress="0"
            /></LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <Button
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnUp"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
       android:background="@drawable/atas" />

        <Button

            android:layout_marginRight="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_70sdp"
            android:layout_toLeftOf="@id/btnUp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/serong_kiri"
            android:rotation="45"
            android:id="@+id/btnKiriAtas"
            />
            <Button

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_toRightOf="@id/btnUp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/serong_kiri"
                android:rotation="135"
                android:id="@+id/btnKananAtas"
                />
        </RelativeLayout>
        <RelativeLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <Button
            android:layout_centerVertical="true"
            android:background="@drawable/kiri"
            android:id="@+id/btnLeft"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            />
<RelativeLayout
    android:id="@+id/jeda"
    android:layout_toRightOf="@id/btnLeft"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_100sdp">

    <RelativeLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle">

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:visibility="invisible"
            android:progressTint="@color/design_default_color_primary" />


        <Button
            android:id="@+id/btnConnect"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/bt" />


    </RelativeLayout>
</RelativeLayout>

        <Button
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/jeda"
            android:background="@drawable/kanan"
            android:id="@+id/btnRight"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            />

</RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnDown"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/bawah" />

            <Button

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_toLeftOf="@id/btnDown"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/serong_kiri"
                android:rotation="-45"
                android:id="@+id/btnKiriBawah"
                />
            <Button

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_toRightOf="@id/btnDown"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/serong_kiri"
                android:rotation="-135"
                android:id="@+id/btnKananBawah"
                />


</RelativeLayout>

    </LinearLayout>

</LinearLayout>
